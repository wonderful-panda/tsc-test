{
  "name": "tsc-test",
  "version": "0.1.5",
  "description": "test TypeScript compilation. (Successfully compiled, or failed as expected)",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": "lib/cli.js",
  "scripts": {
    "build": "tsc",
    "lint": "prettier --write \"{src,test/src}/**/*.ts\"",
    "pretest": "tsc -p test/tsconfig.json",
    "test": "ava test/dist/runner.js --verbose"
  },
  "keywords": [
    "TypeScript",
    "test"
  ],
  "author": "Iwata Hidetaka",
  "license": "MIT",
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^11.13.4",
    "ava": "^1.4.1",
    "prettier": "1.17.0",
    "typescript": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": ">=2.8.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "meow": "^5.0.0"
  },
  "ava": {
    "sources": [
      "test/testcases/*.*"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4
  }
}
